{% extends 'NAOAppBundle:BackOffice:layout.html.twig' %}
{% block title %}{{ parent() }} Mon Compte{% endblock %}
{% block contenu %}
<div class="container bloc-back">
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="alert alert-info">
            {{ flash_message }}
        </div>
    {% endfor %}
    <h1 class="text-center">Modifier mes informations</h1>
    <div class="bloc-form-account">
        <div class="bloc-blanc">
            <div class="row">
                <div class="col-sm-12">
                    <h3>Informations</h3>
                </div>
            </div>
                {{ form_start(infosform, {'action': path('nao_back_office_post_usermodif'), 'method': 'POST'}) }}
                {{ form_errors(infosform) }}
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    {{ form_label(infosform.username) }}
                    {{ form_errors(infosform.username) }}
                    {{ form_widget(infosform.username) }}
                </div>
                <div class="col-md-6 col-sm-12">
                    {{ form_label(infosform.email) }}
                    {{ form_errors(infosform.email) }}
                    {{ form_widget(infosform.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    {{ form_label(infosform.oldPassword) }}
                    {{ form_errors(infosform.oldPassword) }}
                    {{ form_widget(infosform.oldPassword) }}
                </div>
                <div class="col-md-6 col-sm-12">
                    <input type="submit" class="btn btn-default bouton-fonce" id="nao_appbundle_user_save" value="Modifier">
                </div>
            </div>
            {{ form_end(infosform) }}
        </div>
        <div class="bloc-blanc">
            <div class="row">
                <div class="col-sm-12">
                    <h3>Mot de passe</h3>
                </div>
            </div>
                {{ form_start(passform, {'action': path('nao_back_office_post_passmodif'), 'method': 'POST'}) }}
                {{ form_errors(passform) }}
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    {{ form_label(passform.plainPassword.first) }}
                    {{ form_errors(passform.plainPassword.first) }}
                    {{ form_widget(passform.plainPassword.first) }}
                </div>
                <div class="col-md-6 col-sm-12">
                    {{ form_label(passform.plainPassword.second) }}
                    {{ form_errors(passform.plainPassword.second) }}
                    {{ form_widget(passform.plainPassword.second) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    {{ form_label(passform.oldPassword) }}
                    {{ form_errors(passform.oldPassword) }}
                    {{ form_widget(passform.oldPassword) }}
                </div>
                <div class="col-md-6 col-sm-12">
                    <input type="submit" class="btn btn-default bouton-fonce" id="nao_appbundle_user_save" value="Modifier">
                </div>
            </div>
            {{ form_end(passform) }}
        </div>
    </div>
</div>
{% endblock %}
