{% extends 'NAOAppBundle:BackOffice:layout.html.twig' %}
{% block title %}{{ parent() }} Ajouter un utilisateur{% endblock %}
{% block contenu %}
<div class="container bloc-back">
    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="alert alert-info">
            {{ flash_message }}
        </div>
    {% endfor %}
    <h1 class="text-center">Ajouter un utilisateur</h1>
    <div class="bloc-blanc bloc-admin-add-user">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-sm-12">
                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_label(form.role) }}
                {{ form_errors(form.role) }}
                {{ form_widget(form.role) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" id="nao_appbundle_user_save" class="btn btn-default bouton-fonce" value="CrÃ©er">
            </div>
        </div>
        {{ form_end(form) }}
        <div class="row">
            <div class="col-sm-12">
                <div id="lien-accueil">
                    <a href="{{ path('nao_back_office_admin') }}"><span class="fa fa-hand-o-left"></span> Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
